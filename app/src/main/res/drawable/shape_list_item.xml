<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 背景色 -->
    <solid
        android:color="@color/list_item_background_color"/>
    <!-- 边框 -->
    <stroke
        android:width="2dp"
        android:color="@color/list_item_line_color" />
    <!-- 内填充 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
    <!-- 圆角 -->
    <corners android:radius="6dp" />

</shape>